{
  "name": "bun-nolo",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/react-dom": "^18.2.13",
    "bun-types": "latest",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@types/react": "^18.2.28",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux": "^4.2.1"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./packages/web/input.css -o ./public/output.css --optimize-minimize",
    "build": "concurrently \"bun run build:css\" \"bun run build:client\" ",
    "build:client": "bun ./scripts/esbuild",
    "dev": "bun  run build:css && bun --watch ./packages/server/entry.tsx"
  }
}
