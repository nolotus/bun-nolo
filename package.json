{
  "name": "bun-nolo",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/react-dom": "^18.2.13",
    "bun-types": "latest",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/react": "^18.2.28",
    "concurrently": "^8.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.3"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./packages/web/input.css -o ./public/output.css --optimize-minimize",
    "build:web": "bun build ./packages/web/entry.tsx --minify-whitespace --minify-identifiers --minify-syntax --outdir ./public --format esm",
    "build": "concurrently \"bun run build:css\" \"bun run build:web\" ",
    "server": "bun --hot ./packages/server/entry.tsx",
    "dev": "bun run build && bun run server"
  }
}
